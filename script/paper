#!/usr/bin/env python
# -*- coding: utf-8 -*-

import argparse
import os

if __name__ == "__main__":
    ### check invocation dir

    if os.path.basename(os.getcwd()) != "nominal-binding-algebras":
        print "Invoke this script from the project root; exitingâ€¦"
        exit(1)

    ### parse args

    parser = argparse.ArgumentParser(
        description = 'generate code and render document'
    )
    parser.add_argument(
        '--mode',
        choices = ['draft', 'final'],
        default = 'draft',
        help = 'set rendering mode'
    )
    parser.add_argument(
        '--watch',
        action = 'store_true',
        help = 'watch dependencies and re-render document on changes'
    )
    parser.add_argument(
        '--clean',
        action='store_true',
        help = 'remove generated files'
    )
    args = parser.parse_args()

    ### dispatch

    if args.clean:
        os.system(\
"""\
pushd script/.. 1>&-
latexmk -c 2>&-
rm -f Code.tex
popd 1>&-
exit 0\
""")
    else:
        opts_class = ''
        args_latexmk = ''

        if args.watch:
            # enable continuous preview
            args_latexmk = "%s" % '-pvc '
            # don't halt on errors
            args_pdflatex = '--interaction=nonstopmode'

        if args.mode == 'final':
            opts_class = "%s" % 'final'

        opts_class = "\PassOptionsToClass{%s}{article}" % opts_class
        cmds_latex =\
"""\
pushd script/.. 1>&-
latexmk %s-pdflatex='internal custom_latex lualatex %s %%O \"%s\input{%%S}\"' paper
popd 1>&-
exit 0\
""" % (args_latexmk, args_pdflatex, opts_class)
        os.system(cmds_latex)
